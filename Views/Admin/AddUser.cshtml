@using UsersApp.ViewModels;
@using AspNetCore.ReCaptcha

@model AddUserViewModel;
@{
	ViewData["Title"] = "Add User";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="account-container">
	<div class="account-box">
		<h2 class="text-center mp-4">Add User</h2>
		<form asp-action="AddUser" method="post" enctype="multipart/form-data">
			<div asp-validation-summary="All" class="text-danger"></div>

			<div class="mp-3">
				<label asp-for="FirstName" class="form-label">First Name</label>
				<input asp-for="FirstName" type="text" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="MiddleName" class="form-label">Middle Name</label>
				<input asp-for="MiddleName" type="text" class="form-control" />
				<span asp-validation-for="MiddleName" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="LastName" class="form-label">Last Name</label>
				<input asp-for="LastName" type="text" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="Address" class="form-label">Address</label>
				<input asp-for="Address" type="text" class="form-control" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="Gender" class="form-label">Gender</label>
				<div>
					<input asp-for="Gender" type="radio" value="Male" /> Male
					<input asp-for="Gender" type="radio" value="Female" /> Female
				</div>
				<span asp-validation-for="Gender" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="Nationality" class="form-label">Nationality</label>
				<input asp-for="Nationality" type="text" class="form-control" />
				<span asp-validation-for="Nationality" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="CurrentJob" class="form-label">Current Job</label>
				<input asp-for="CurrentJob" type="text" class="form-control" />
				<span asp-validation-for="CurrentJob" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="PersonalEmail" class="form-label">Personal Email</label>
				<input asp-for="PersonalEmail" type="email" class="form-control" />
				<span asp-validation-for="PersonalEmail" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="Email" class="form-label">Official Email</label>
				<input asp-for="Email" type="email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="UserName" class="form-label">Username</label>
				<input asp-for="UserName" type="text" class="form-control" />
				<span asp-validation-for="UserName" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="Password" class="form-label">Password</label>
				<input asp-for="Password" type="password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
				<input asp-for="ConfirmPassword" type="password" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="PhoneNumber" class="form-label">Mobile Phone Number</label>
				<input asp-for="PhoneNumber" type="tel" class="form-control" />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="OfficePhoneNumber" class="form-label">Office Phone Number</label>
				<input asp-for="OfficePhoneNumber" type="tel" class="form-control" />
				<span asp-validation-for="OfficePhoneNumber" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="HomePhoneNumber" class="form-label">Home Phone Number</label>
				<input asp-for="HomePhoneNumber" type="tel" class="form-control" />
				<span asp-validation-for="HomePhoneNumber" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="EmergencyContactName" class="form-label">Emergency Contact Name</label>
				<input asp-for="EmergencyContactName" type="text" class="form-control" />
				<span asp-validation-for="EmergencyContactName" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="EmergencyContactPhone" class="form-label">Emergency Contact Phone</label>
				<input asp-for="EmergencyContactPhone" type="tel" class="form-control" />
				<span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="EmergencyContactEmail" class="form-label">Emergency Contact Email</label>
				<input asp-for="EmergencyContactEmail" type="email" class="form-control" />
				<span asp-validation-for="EmergencyContactEmail" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="EmergencyContactAddress" class="form-label">Emergency Contact Address</label>
				<input asp-for="EmergencyContactAddress" type="text" class="form-control" />
				<span asp-validation-for="EmergencyContactAddress" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="PassportNumber" class="form-label">Passport Number</label>
				<input asp-for="PassportNumber" type="text" class="form-control" />
				<span asp-validation-for="PassportNumber" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="NameInPassport" class="form-label">Name In Passport</label>
				<input asp-for="NameInPassport" type="text" class="form-control" />
				<span asp-validation-for="NameInPassport" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="PassportIssueDate" class="form-label">Passport Issue Date</label>
				<input asp-for="PassportIssueDate" type="date" class="form-control" />
				<span asp-validation-for="PassportIssueDate" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="PassportExpiryDate" class="form-label">Passport Expiry Date</label>
				<input asp-for="PassportExpiryDate" type="date" class="form-control" />
				<span asp-validation-for="PassportExpiryDate" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="DateOfBirth" class="form-label">Date Of Birth</label>
				<input asp-for="DateOfBirth" type="date" class="form-control" />
				<span asp-validation-for="DateOfBirth" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="SkillsDetails" class="form-label">Skills Details</label>
				<textarea asp-for="SkillsDetails" class="form-control"></textarea>
				<span asp-validation-for="SkillsDetails" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="ExperienceDetails" class="form-label">Experience Details</label>
				<textarea asp-for="ExperienceDetails" class="form-control"></textarea>
				<span asp-validation-for="ExperienceDetails" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="PreviousUNMissions" class="form-label">Previous UN Missions</label>
				<textarea asp-for="PreviousUNMissions" class="form-control"></textarea>
				<span asp-validation-for="PreviousUNMissions" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="PostalCode" class="form-label">Postal Code</label>
				<input asp-for="PostalCode" type="text" class="form-control" />
				<span asp-validation-for="PostalCode" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="SkillsAttachments" class="form-label">Skills Attachments</label>
				<input asp-for="SkillsAttachments" type="file" class="form-control" />
				<span asp-validation-for="SkillsAttachments" class="text-danger"></span>
			</div>

			<div class="mp-3">
				<label asp-for="ExperienceAttachments" class="form-label">Experience Attachments</label>
				<input asp-for="ExperienceAttachments" type="file" class="form-control" />
				<span asp-validation-for="ExperienceAttachments" class="text-danger"></span>
			</div>
			<div class="mp-3">

			</div>
			<input asp-for="IsActivated" type="checkbox" />
			<label asp-for="IsActivated" class="form-check-label">Is Activated</label>
			</>
			<div class="mp-3">
				<input asp-for="IsAdmin" type="checkbox" />
				<label asp-for="IsAdmin" class="form-check-label">Is Admin</label>
			</div>
			<recaptcha />

			<br />
			<input type="submit" value="Add User" class="btn btn-success w-100 p-2" />
			
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
